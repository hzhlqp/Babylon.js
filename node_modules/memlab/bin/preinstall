const path = require("path");
const fs = require("fs");
if (process.platform !== "win32") {
  const memlabFile = path.join(__dirname, "../bin/memlab");
  const content = fs.readFileSync(memlabFile, "UTF-8");
  fs.writeFileSync(
    memlabFile,
    content.replace("#!/usr/bin/env node", "#!/usr/bin/env -S node"),
    "UTF-8"
  );
}
